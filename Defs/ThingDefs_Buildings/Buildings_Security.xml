  <ThingDef ParentName="BuildingBase">
    <defName>TrapSpikes</defName>
    <label>spikes trap</label>
    <thingClass>Building_SpikesTrap</thingClass>
    <graphicData>
      <texPath>Things/Building/SpikesArmed</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <damageData>
        <rect>(0,0,1,0.15)</rect>
      </damageData>
    </graphicData>
    <uiIconPath>Things/Building/SpikesArmed_UI</uiIconPath>
    <altitudeLayer>Building</altitudeLayer>
    <drawerType>RealtimeOnly</drawerType>
    <rotatable>true</rotatable>
    <tickerType>Normal</tickerType>
    <stealable>false</stealable>
    <statBases>
      <MaxHitPoints>20</MaxHitPoints>
      <WorkToBuild>1000</WorkToBuild>
      <Beauty>-2</Beauty>
      <TrapMeleeDamage>10</TrapMeleeDamage>
      <TrapSpringChance>0.6</TrapSpringChance>
    </statBases>
    <description>A set of poison spikes that can inflict damage on the victims legs, feet or hands. It triggers for every other victim.</description>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>35</costStuffCount>
    <designationCategory>Security</designationCategory>
    <building>
      <isTrap>true</isTrap>
    </building>
  </ThingDef>
